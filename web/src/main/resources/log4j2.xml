<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n
		</Property>
		<Property name="APP_LOG_ROOT">/u01/oracle/log</Property>
	</Properties>
	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
		<File name="LogToFile" fileName="${APP_LOG_ROOT}/ServiceGatewayApp/application.log">
	      <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
	    </File>
		<!-- 	    use for split file log -->
	    <RollingFile name="LogToFileRoll" fileName="${APP_LOG_ROOT}/ServiceGatewayApp/ServiceGatewayApp.log"
            filePattern="${APP_LOG_ROOT}/ServiceGatewayApp/ServiceGatewayApp-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
	</Appenders>
	<Loggers>
<!-- 		<Logger name="vn.com.cmc" level="info"> -->
<!-- 			<AppenderRef ref="LogToFile" /> -->
<!-- 			<AppenderRef ref="LogToConsole" /> -->
<!-- 		</Logger> -->
		<!-- Log everything in hibernate -->
<!-- 	    <Logger name="org.hibernate.SQL" level="debug" /> -->
<!-- 	    <Logger name="org.hibernate.type.descriptor.sql" level="trace" /> -->
		<Root level="info">
			<AppenderRef ref="LogToFileRoll" />
			<AppenderRef ref="LogToConsole" />
		</Root>
	</Loggers>
</Configuration>